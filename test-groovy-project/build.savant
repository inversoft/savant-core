groovy = loadPlugin("org.savantbuild.plugin:groovy:0.1.0")
groovy.settings.groovyVersion = "2.2"
groovy.settings.javaVersion = "1.8"

dependency = loadPlugin("org.savantbuild.plugin:dependency:0.1.0")

project(name: "test-groovy-project", group: "org.savantbuild.test", version: "0.1.0", license: "Apachev2") {
  workflow {
    fetch {
      cache(dir: "${SYS['user.home']}/.savant/cache")
      url(url: "http://repository.savantbuild.org")
    }
    publish {
      cache(dir: "${SYS['user.home']}/.savant/cache")
    }
  }

  publications {
    publication(name: "${project.name}", type: "jar", file: "build/jars/${project.name}-${project.version}.jar", sourceFile: "build/jars/${project.name}-${project.version}-src.jar")
    publication(name: "${project.name}-test", type: "jar", file: "build/jars/${project.name}-test-${project.version}.jar", sourceFile: "build/jars/${project.name}-test-${project.version}-src.jar")
  }
}

target(name: "compile", description: "This target compiles everything") {
  groovy.compileMain()
  groovy.compileTest()
}

target(name: "jar", description: "This runs the tests", dependsOn: ["compile"]) {
  groovy.jar()
}

target(name: "test", description: "This runs the tests", dependsOn: ["jar"]) {
  // Skip for now
}

target(name: "int", description: "Performs an integration release of the project", dependsOn: ["test"]) {
  dependency.integrate()
}